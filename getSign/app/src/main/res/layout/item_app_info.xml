<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/appNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:text="appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appPacketNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="appPacketName"
        app:layout_constraintStart_toStartOf="@+id/appNameTv"
        app:layout_constraintTop_toBottomOf="@+id/appNameTv" />

    <TextView
        android:id="@+id/lunchNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="appLuncher"
        app:layout_constraintStart_toStartOf="@+id/appPacketNameTv"
        app:layout_constraintTop_toBottomOf="@+id/appPacketNameTv" />

    <TextView
        android:id="@+id/signTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="sign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/appPacketNameTv"
        app:layout_constraintTop_toBottomOf="@+id/lunchNameTv" />

    <TextView
        android:id="@+id/copeTv"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:background="#aaffaa"
        android:gravity="center"
        android:text="复制签名"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>